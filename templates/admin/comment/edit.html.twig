{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un commentaire utilisateur{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="my-5">Modification du commentaire n° {{ comment.id }}</h1>
                <div class="alert alert-primary">
                    <strong>Annonce liée : </strong>{{ comment.ad.title }}<br>
                    <strong>Autheur : </strong>{{ comment.author.fullName }}<br>
                    <strong>Date de création : </strong>{{ comment.createdAt | date('d/m/y H:i') }}<br>
                    <strong>Note donnée : </strong>{{ comment.rating }}
                </div>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Enregistrer les modifications</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}